<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>SignInControl</servlet-name>
        <servlet-class>controlador.SignInControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogInControl</servlet-name>
        <servlet-class>controlador.LogInControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CursosControl</servlet-name>
        <servlet-class>CursosControl</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ComentarioControl</servlet-name>
        <servlet-class>controlador.ComentarioControl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignInControl</servlet-name>
        <url-pattern>/signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogInControl</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CursosControl</servlet-name>
        <url-pattern>/cursos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ComentarioControl</servlet-name>
        <url-pattern>/comentario</url-pattern>
    </servlet-mapping>
</web-app>
